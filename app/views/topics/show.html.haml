- model_class = Topic
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @topic.title
%p
  %strong= model_class.human_attribute_name(:text_field) + ':'
  %br
  = @topic.text_field
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @topic.user_id


= link_to t('.back', :default => t("helpers.links.back")), topics_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_topic_path(@topic), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), topic_path(@topic), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
