.row
  .col-md-12
    = simple_form_for @institution, :html => { :class => 'form-horizontal' } do |f|
      %h3 Institution information
      = f.input :name
      = f.input :subdomain
      %h3 Your information
      = f.input :email
      = f.input :first_name
      = f.input :last_name
      = f.input :password
      = f.input :password_confirmation
      = f.button :submit