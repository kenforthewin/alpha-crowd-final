.row
  .col-md-12
    .panel.panel-primary
      .panel-heading
        %h1.panel-title
          New post in:
          = truncate(@thread.name)
      .panel-body
        .well
          .row
            .col-md-12
              = simple_form_for :post, url: guest_posts_path, method: :post, :html => { :class => 'form-horizontal' } do |f|
                = f.input :guest_forum_id, :as => :hidden, :input_html => { :value => @guest_forum.id }
                = f.input :text, as: :ckeditor
                = f.input :guest_forum_topic_id, :as => :hidden, :input_html => { :value => @thread.id }
                = f.button :submit, :class => 'btn-primary'