- model_class = ForumTopic
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:forum_id) + ':'
  %br
  = @forum_topic.forum_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @forum_topic.name
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @forum_topic.user_id


= link_to t('.back', :default => t("helpers.links.back")), forum_topics_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_forum_topic_path(@forum_topic), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), forum_topic_path(@forum_topic), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
