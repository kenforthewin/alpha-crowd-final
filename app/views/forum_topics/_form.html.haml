= simple_form_for @forum_topic, :html => { :class => 'form-horizontal' } do |f|
  = f.input :forum_id
  = error_span(@forum_topic[:forum_id])
  = f.input :name
  = error_span(@forum_topic[:name])
  = f.input :user_id
  = error_span(@forum_topic[:user_id])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), forum_topics_path, :class => 'btn btn-default'
