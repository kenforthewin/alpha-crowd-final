= simple_form_for @forum, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = error_span(@forum[:name])
  = f.input :description
  = error_span(@forum[:description])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), forums_path, :class => 'btn btn-default'
