- model_class = Forum
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @forum.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @forum.description


= link_to t('.back', :default => t("helpers.links.back")), forums_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_forum_path(@forum), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), forum_path(@forum), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
